<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meetingContentFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/black" >

    <TableLayout
        android:id="@+id/pendingTableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:ignore="UselessParent" >

        <TableRow
            android:id="@+id/pendingTitleRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/pendingTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:text="@string/pendingTitleTextView"
                android:textColor="@color/gray"
                android:textSize="@dimen/title_text_size" />
        </TableRow>

        <TableRow
            android:id="@+id/pendingScrollRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="@color/gray" >

            <ScrollView
                android:id="@+id/pendingScrollView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/gray" >

                <TableLayout
                    android:id="@+id/pendingScrollTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TableLayout>
            </ScrollView>
        </TableRow>

        <RelativeLayout
            android:id="@+id/pendingButtonBar"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip" />

            <View
                android:id="@+id/PendingViewBtnHelper"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dip"
                android:layout_marginTop="4dip"
                android:background="?android:attr/dividerVertical"
                android:visibility="visible" />

            <Button
                android:id="@+id/PendingBtnDecline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/PendingViewBtnHelper"
                android:background="?android:attr/selectableItemBackground"
                android:paddingBottom="10dp"
                android:text="@string/pendingBtnNegative"
                android:textColor="@color/gray" />

            <Button
                android:id="@+id/PendingBtnOk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/PendingViewBtnHelper"
                android:background="?android:attr/selectableItemBackground"
                android:paddingBottom="10dp"
                android:text="@string/pendingBtnOk"
                android:textColor="@color/gray" />
        </RelativeLayout>
    </TableLayout>

</FrameLayout>